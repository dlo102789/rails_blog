<!-- Form for creating a new comment. To be injected into pages/home and pages/show -->

<%= simple_form_for([@page, @page.comments.build]) do |f| %>

    <ul>
      <% @page.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>

    <p>* Required</p>
    <div class="form-group">
      <%= f.input :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.input :body, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.button :submit, class: 'btn btn-default' %>
    </div>

    <%= f.hidden_field :page_id %>

<% end %>