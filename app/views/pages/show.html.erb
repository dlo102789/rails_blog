<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-12"><br/><br/>
			<div class="well-lg">
				<h2><strong><%= @page.title %></strong></h2>
				<p><em>Written on <%= @page.created_at.strftime("%B %e, %Y") %></em></p><br/>
				<p><%= raw(@page.body) %></p>
				<% if user_signed_in? %>
          <%= link_to 'Delete', page_path(@page), method: :delete, data: {confirm: "Really delete the article?"} %>
				  <%= link_to 'Edit', edit_page_path(@page) %><br/>
        <% end %>
				<%= link_to '<< Back to Home', root_path %><br/>
        <% if @page.comments.present? %>
          <h2 class="text-center" id="comments">Comments</h2>
          <%= render @page.comments %>
        <% else %>
          <h2 class="text-center" id="comments">Comments</h2>
          <h4 class="text-center">- It sure is empty in here... -</h4><br/>
        <% end %>
        <%= render partial: 'comments/form', page_id: @page.id %>
      </div>
		</div>
	</div>
</div>